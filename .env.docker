# =============================================================================
# DOCKER ENVIRONMENT CONFIGURATION
# =============================================================================
# This file contains environment variables specifically for Docker deployments.
# Copy this file to .env and fill in your actual values.
#
# IMPORTANT: Never commit .env file with real credentials to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Binance API Configuration
# -----------------------------------------------------------------------------
# Testnet Credentials (for safe testing)
BINANCE_TESTNET_API_KEY=your_binance_testnet_api_key_here
BINANCE_TESTNET_SECRET_KEY=your_binance_testnet_secret_key_here

# Mainnet Credentials (LIVE TRADING - USE WITH EXTREME CAUTION!)
BINANCE_MAINNET_API_KEY=your_binance_mainnet_api_key_here
BINANCE_MAINNET_SECRET_KEY=your_binance_mainnet_secret_key_here

# Environment Selection
BINANCE_TESTNET=true   # true=testnet, false=mainnet (CAUTION!)

# -----------------------------------------------------------------------------
# Trading Configuration
# -----------------------------------------------------------------------------
TRADING_MODE=paper
TRADING_DEFAULT_LEVERAGE=10
TRADING_MAX_POSITION_SIZE_USDT=1000.0
TRADING_RISK_PER_TRADE_PERCENT=1.0

# -----------------------------------------------------------------------------
# Discord Notifications (Optional)
# -----------------------------------------------------------------------------
DISCORD_WEBHOOK_URL=

# -----------------------------------------------------------------------------
# Database Configuration (Docker-specific paths)
# -----------------------------------------------------------------------------
DATABASE_PATH=/app/data/tradingbot.db

# -----------------------------------------------------------------------------
# Logging Configuration (Docker-specific paths)
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FILE_PATH=/app/logs/tradingbot.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# -----------------------------------------------------------------------------
# API Server Configuration
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# -----------------------------------------------------------------------------
# Redis Configuration (Docker networking)
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# PostgreSQL Configuration (Docker networking)
# -----------------------------------------------------------------------------
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=tradingbot
POSTGRES_USER=tradingbot
POSTGRES_PASSWORD=tradingbot_secure_password

# IMPORTANT: Change this to a strong password in production!
# You can generate one with: openssl rand -base64 32

# -----------------------------------------------------------------------------
# Prometheus & Grafana (Optional)
# -----------------------------------------------------------------------------
# These are handled by docker-compose.yml
# No additional configuration needed here

# =============================================================================
# TASK MASTER AI & DEVELOPMENT TOOLS (Optional - for development only)
# =============================================================================
# These keys are only needed for development with Task Master AI
# You can remove them for production deployments

ANTHROPIC_API_KEY=
PERPLEXITY_API_KEY=
OPENAI_API_KEY=
GOOGLE_API_KEY=
MISTRAL_API_KEY=
XAI_API_KEY=
GROQ_API_KEY=
OPENROUTER_API_KEY=
AZURE_OPENAI_API_KEY=
OLLAMA_API_KEY=
GITHUB_API_KEY=
