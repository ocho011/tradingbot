# =============================================================================
# TRADING BOT CONFIGURATION
# =============================================================================

# -----------------------------------------------------------------------------
# Binance API Configuration
# -----------------------------------------------------------------------------
# Testnet Credentials (for safe testing)
BINANCE_TESTNET_API_KEY="your_binance_testnet_api_key_here"       # Testnet API key
BINANCE_TESTNET_SECRET_KEY="your_binance_testnet_secret_key_here" # Testnet secret key

# Mainnet Credentials (LIVE TRADING - USE WITH EXTREME CAUTION!)
BINANCE_MAINNET_API_KEY="your_binance_mainnet_api_key_here"       # Mainnet API key
BINANCE_MAINNET_SECRET_KEY="your_binance_mainnet_secret_key_here" # Mainnet secret key

# Legacy Credentials (DEPRECATED - Use testnet/mainnet specific keys above)
# BINANCE_API_KEY="your_binance_api_key_here"       # Fallback if specific keys not set
# BINANCE_SECRET_KEY="your_binance_secret_key_here" # Fallback if specific keys not set

# Environment Selection
BINANCE_TESTNET=true                                   # true=testnet, false=mainnet (CAUTION!)

# -----------------------------------------------------------------------------
# Trading Configuration
# -----------------------------------------------------------------------------
TRADING_MODE="paper"                                   # Trading mode: paper or live
TRADING_DEFAULT_LEVERAGE=10                            # Default leverage for positions (1-125)
TRADING_MAX_POSITION_SIZE_USDT=1000.0                  # Maximum position size in USDT
TRADING_RISK_PER_TRADE_PERCENT=1.0                     # Risk per trade as % of capital

# -----------------------------------------------------------------------------
# Discord Notifications (Optional)
# -----------------------------------------------------------------------------
DISCORD_WEBHOOK_URL=""                                 # Discord webhook URL for notifications

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DATABASE_PATH="data/tradingbot.db"                     # SQLite database file path

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL="INFO"                                       # Logging level: DEBUG, INFO, WARNING, ERROR
LOG_FILE_PATH="logs/tradingbot.log"                    # Log file path
LOG_MAX_SIZE_MB=10                                     # Maximum log file size in MB
LOG_BACKUP_COUNT=5                                     # Number of backup log files

# -----------------------------------------------------------------------------
# API Server Configuration
# -----------------------------------------------------------------------------
API_HOST="0.0.0.0"                                     # API server host
API_PORT=8000                                          # API server port
API_RELOAD=false                                       # Enable auto-reload (dev only)

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# API Key Encryption
ENCRYPTION_MASTER_KEY="your_32_byte_encryption_key_here_change_this"  # Master key for API key encryption (32+ characters)

# Rate Limiting
RATE_LIMIT_ENABLED=true                               # Enable rate limiting
RATE_LIMIT_CAPACITY=100                               # Default token bucket capacity
RATE_LIMIT_REFILL_RATE=10.0                          # Tokens per second refill rate

# Redis Configuration (for distributed rate limiting)
REDIS_HOST="localhost"                                # Redis server host
REDIS_PORT=6379                                       # Redis server port
REDIS_DB=0                                           # Redis database number
REDIS_PASSWORD=""                                    # Redis password (optional)

# IP Whitelist (comma-separated IPs or CIDR ranges)
IP_WHITELIST_ENABLED=false                           # Enable IP whitelisting
IP_WHITELIST="127.0.0.1,::1"                        # Allowed IPs (comma-separated)

# CORS Configuration
CORS_ORIGINS="http://localhost:3000,http://localhost:8080,http://localhost:5173"  # Allowed origins for CORS

# =============================================================================
# TASK MASTER AI & DEVELOPMENT TOOLS
# =============================================================================

# API Keys (Required to enable respective provider)
ANTHROPIC_API_KEY="your_anthropic_api_key_here"       # Required: Format: sk-ant-api03-...
PERPLEXITY_API_KEY="your_perplexity_api_key_here"     # Optional: Format: pplx-...
OPENAI_API_KEY="your_openai_api_key_here"             # Optional, for OpenAI models. Format: sk-proj-...
GOOGLE_API_KEY="your_google_api_key_here"             # Optional, for Google Gemini models.
MISTRAL_API_KEY="your_mistral_key_here"               # Optional, for Mistral AI models.
XAI_API_KEY="YOUR_XAI_KEY_HERE"                       # Optional, for xAI AI models.
GROQ_API_KEY="YOUR_GROQ_KEY_HERE"                     # Optional, for Groq models.
OPENROUTER_API_KEY="YOUR_OPENROUTER_KEY_HERE"         # Optional, for OpenRouter models.
AZURE_OPENAI_API_KEY="your_azure_key_here"            # Optional, for Azure OpenAI models (requires endpoint in .taskmaster/config.json).
OLLAMA_API_KEY="your_ollama_api_key_here"             # Optional: For remote Ollama servers that require authentication.
GITHUB_API_KEY="your_github_api_key_here"             # Optional: For GitHub import/export features. Format: ghp_... or github_pat_...